<div class="container">
    <div class="row">
        <div class="col s12">
            <form class="need-form">
                <table class="responsive-table" class="striped">
                    <thead>
                        <tr>
                            <th>
                                <h5>My needs</h5>
                            </th>
                            <th>
                                <h5>Other Person's Email</h5>
                            </th>
                            <th>
                                <h5>Origin Address</h5>
                            </th>
                            <th>
                                <h5>Destination Address</h5>
                            </th>
                            <th>
                                <h5>Date</h5>
                            </th>
                            <th>
                                <h5>Status</h5>
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        {{#each tasks}}
                        {{> t-block}}
                        {{/each}}
                    </tbody>

                </table>
            </form>
        </div>


        {{!-- <div id="mapBasket" style="width: 100%; height: 200px;"> </div> --}}
        <button class="btn waves-effect waves-light h4us-btn-float-left btn-approve" type="submit" name="action">Approve
            {{!-- <i class="material-icons right">send</i> --}}
        </button>


        <button class="btn waves-effect waves-light h4us-btn-float-right btn-deny" type="submit" name="action">Deny
            {{!-- <i class="material-icons right">send</i> --}}
        </button>


    </div>
</div>